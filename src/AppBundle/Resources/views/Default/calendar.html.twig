{% extends 'AppBundle::layout.html.twig' %}

{% block menu_calendar %}active{% endblock %}

{% block contents %}
    <section>
    	<div class="container">

            <h3>Liste des sorties</h3>

            <table class="table table-striped">
                <tr>
                    <th>Série</th>
                    <th>Saison</th>
                    <th>Épisode</th>
                    <th>Date de sortie</th>
                    <th></th>
                </tr>
                {% for episode in episodes %}
                    <tr>
                        <td>{{ episode.season.show.name }}</td>
                        <td>Saison {{ episode.season.number }}</td>
                        <td>Épisode {{ episode.number }}: {{ episode.name }}</td>
                        <td>{{ episode.date|date('d/m/Y') }}</td>
                        <td class="text-right"><a href="{{ path('show', {id: episode.season.show.id}) }}" class="btn btn-sm btn-primary">Accéder à la série</a></td>
                    </tr>
                {% endfor %}
            </table>

    	</div>
    </section>
{% endblock %}